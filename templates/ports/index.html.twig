{% extends "base.html.twig" %}

{% block body %}
	<h1>Ports
		<a href="create" class="btn btn-success" role="button">
			<span class="fas fa-plus"></span>
		</a>
	</h1>
	<table class="table table-bordered table-stripped table-hover">
		<thead class="thead-light">
			<tr>
				<th>Number</th>
				<th>Devices</th>
			</tr>
		</thead>
		<tbody>
			{% for port in ports %}
				<tr>
					<th>{{ port.number }}</th>
					<th>
						{% for device in port.devices|split(";") %}
							<span class="badge badge-primary">{{ device }}</span>
						{% endfor %}
					</th>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
